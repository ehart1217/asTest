<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <com.example.ehart.myapplication.touch.CustomViewGroup
        android:id="@+id/study_vp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#666666">

        <com.example.ehart.myapplication.touch.CustomView
            android:id="@+id/study_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="#000000" />

    </com.example.ehart.myapplication.touch.CustomViewGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <Space
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="dispatch"
            android:textSize="10sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="interrupt"
            android:textSize="10sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="touchEvent"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="ViewGroup"
            android:textSize="10sp" />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="dispatch"
            android:textSize="10sp" />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="interrupt"
            android:textSize="10sp" />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="touchEvent"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="View"
            android:textSize="10sp" />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="dispatch"
            android:textSize="10sp" />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="interrupt"
            android:textSize="10sp" />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="touchEvent"
            android:textSize="10sp" />

    </LinearLayout>
</LinearLayout>